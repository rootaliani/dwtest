-- Criando a tabela de clientes 
-- Chave primaria sera o Cod.cliente
-- Estrutura da tabela (cod.cliente, Nome, Vertical)

CREATE TABLE CLIENTES 
( COD_CLIENTE FLOAT (4),
NOME VARCHAR (100),
VERTICAL VARCHAR (20)
)

ALTER TABLE CLIENTES ADD CONSTRAINT PK_CLIENTES PRIMARY KEY (COD_CLIENTE);

ALTER TABLE public.clientes RENAME TO "T_CLIENTES";